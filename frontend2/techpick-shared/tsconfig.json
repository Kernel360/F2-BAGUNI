{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "jsx": "preserve",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"], // 포함할 파일
  "exclude": ["node_modules", "dist"] // 제외할 폴더
}
