{
  "manifest_version": 3,
  "name": "TechPick Extension",
  "description": "TechPick Extension description",
  "version": "0.1",
  "permissions": ["tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["contentscript.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
